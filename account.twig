{% include 'header.twig' %}
      
      
      
       <!-- Account Page Content  -->
<div id="accountpage">
    <div class="container-fluid">
                <div class="row">
                    {% if error %}
				<div class="alert alert-dismissible alert-danger">
					<button type="button" class="close" data-dismiss="alert">×</button>
					{{ errorText }}
				</div>
			{% endif %}
			{% if success %}
				<div class="alert alert-dismissible alert-success">
					<button type="button" class="close" data-dismiss="alert">×</button>
					{{ successText }}
				</div>
			{% endif %}
            <div class="col-md-6">
                

                <div class="card card_v2 mb-3">
                    <div class="card-body">
                            <div id="def_side_title">
                                <div class="icon">
                                    <i class="fal fa-user-circle"></i>
                                </div>
                                <div class="name">
                                User Infos
                                </div>
                            </div>
                         <div class="mb-3">
                             <label for="">Username</label>
                             <input type="text" class="form-control" id="username" value="{{ user['username'] }}" readonly>
                         </div>
                         <div class="mb-3">
                            <label for="">Email Address</label>
                            <input type="text" class="form-control" id="username" value="{{ user['email'] }}" readonly>
                        </div>
                    </div>
                </div>

                <div class="card card_v2 mb-3">
                    <div class="card-body">

                            <div id="def_side_title">
                                <div class="icon">
                                    <i class="far fa-lock"></i>
                                </div>
                                <div class="name">
                                Account Password Manager
                                </div>
                            </div>
                           
                           
				<form method="post" action="account">
				              
                                <div class="mb-3">
                                    <label for="current">{{ lang['account.password.current'] }}</label>
						<input type="password" class="form-control" value="" name="current_password">
                                </div>

                                <div class="mb-3">
                                    <label for="new">{{ lang['account.password.new'] }}</label>
						<input type="password" class="form-control" value="" name="password">
                                </div>

                                <div class="mb-3">
                                    <label for="confirm">{{ lang['account.password.confirm'] }}</label>
						<input type="password" class="form-control" value="" name="confirm_password">
                                </div>
                               
                               <input type="hidden" name="crsf_token" value="{{ csrf_token() }}">
                                <button type="submit" class="btn btn-primary d-block w-100">{{ lang['account.password.button'] }}</button>
                            </form>
                            
                    </div>
                </div>

            </div>
            <div class="col-md-6">
                <div class="card card_v2 mb-3">
                    <div class="card-body">
                            <div id="def_side_title">
                                <div class="icon">
                                    <i class="fad fa-key"></i>
                                </div>
                                <div class="name">
                                 API Key Generator
                                </div>
                            </div>
                           
                                <form method="post" action="account/newapikey">
                                <div class="form-group">
                                  <label for="key" class="control-label">{{lang["account.api.key"]}}</label>
						<input {% if settings["user_api_key"] == 2 %}
						data-toggle="tooltip" data-placement="top"
						title="The key is hidden for security reasons" {% endif %} type="text" class="form-control" value="{{ api_key }}" readonly>
                                                                  </div>
                      <input type="hidden" name="crsf_token" value="{{ csrf_token() }}">
                                <button type="submit" class="btn btn-primary d-block w-100">{{ lang['account.generate.key'] }}</button>
                              </form>
                        <br>
                        <div class="alert alert-danger">
                            When you click on "Generate new" it will Generate new key. This key is very sensitive informations of your account please avoid share this key. Thank you.
                        </div>
                    </div>
                  </div>
                  
                          {% if settings["otp_login"] %}
                 <div class="card card_v2 mb-3">
                    <div class="card-body">
                        <div id="def_side_title">
                            <div class="icon">
                                <i class="far fa-shield-alt"></i>
                            </div>
                            <div class="name">
                                Two-factor authentication
                            </div>
                        </div>
                        <p>
                    Email-based option to add an extra layer of protection to your account. When signing in you’ll need to enter a code that will be sent to your email address.
                </p>
                       <form method="POST" action="{{ site.url }}/otp_auth">
            <input type="hidden" name="active" value="{% if user.user2FA == 1%}2{% else %}1{% endif %}">
             <button type="submit" class="btn btn-primary d-block w-100">
              {% if user.user2FA == 1%}Disable{% else %}Enable{% endif %}
              </button>
           </form>
                    </div>
                </div>
                {% endif %}
                
                <div class="card card_v2 mb-3">
                    <div class="card-body">
                            <div id="def_side_title">
                                <div class="icon">
                                    <i class="far fa-clock"></i>
                                </div>
                                <div class="name">
                                    {{ lang['account.timezone.title'] }}
                                </div>
                            </div>
                           <form method="post" action="account/timezone">
                                <div class="form-group">
                                  <label for="timezone" class="control-label">{{ lang['account.timezone.title'] }}</label>
						<select class="form-control" name="timezone">
							{% for timezone,name in timezones %}
								<option {% if timezone == user['timezone'] %} selected {% endif %} value="{{ timezone }}">{{ name }}</option>
							{% endfor %}
						</select>
                                </div>
                      <input type="hidden" name="crsf_token" value="{{ csrf_token() }}">
                                <button type="submit" class="btn btn-primary d-block w-100">{{ lang['account.timezone.button'] }}</button>
                              </form>
                    </div>
                  </div>

            </div>
        </div>
    </div>
</div>
<!-- //Account Page Content  -->


                </div>
            </div>
        </main>
{% include 'footer.twig' %}
