{% include 'header.twig' %}

<main id="notLogin">
    <section id="signUp">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="sigup_title">
                        <h1>Signup Now</h1>
                    </div>
                </div>
            </div>
        </div>
        <div class="container my-5">
            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <div class="card card_v2 mb-5">
                        <div class="card-body">


                            {% if errorText %}
                            <div class="alert alert-dismissible alert-danger">
                                <button type="button" class="close" data-dismiss="alert">×</button>
                                {{ errorText }}
                            </div>
                            {% endif %}
                            {% if successText %}
                            <div class="alert alert-dismissible alert-success">
                                <button type="button" class="close" data-dismiss="alert">×</button>
                                {{ successText }}
                            </div>
                            {% endif %}

                            <form action="" method="post">

                                <div class="form-group mb-3">
                                    <label for="username" class="control-label mb-1">
                                        <span class="icon">
                                            <i class="far fa-user-circle"></i>
                                        </span>
                                        <span class="name">{{ lang['signup.username'] }}</span>
                                    </label>
                                    <input type="text" class="form-control" id="username" value="" name="username">
                                </div>

                                {% if settings["register_name"] == 2 %}

                                <div class="form-group mb-3">
                                    <label for="firstname" class="control-label mb-1">
                                        <span class="icon">
                                            <i class="far fa-file-signature"></i>
                                        </span>
                                        <span class="name">{{ lang['signup.name'] }} </span>
                                    </label>
                                    <input type="text" class="form-control" id="firstname" value="{{ data['name'] }}" name="name">
                                </div>

                                {% endif %}

                                <div class="form-group mb-3">
                                    <label for="email" class="control-label mb-1">
                                        <span class="icon">
                                            <i class="fas fa-envelope"></i>
                                        </span>
                                        <span class="name">{{ lang['signup.email'] }}</span>
                                    </label>
                                    <input type="email" class="form-control" id="email" value="{{ data['email'] }}" name="email">
                                </div>

                                {% if settings["register_whatsapp"] == 2 %}                      <div class="form-group mb-3">
                                    <label for="telephone" class="control-label mb-1">
                                        <span class="icon">
                                            <i style="color: #fb981e;" class="fab fa-whatsapp"></i>
                                        </span>
                                        <span class="name">{{ lang['signup.telephone'] }}</span>
                                    </label>
                                    <input type="telephone" class="form-control" id="telephone" value="{{ data['telephone'] }}" name="telephone">
                                </div>
                                {% endif %}

                                <div class="form-group mb-3">
                                    <label for="password" class="control-label mb-1">
                                        <span class="icon">
                                            <i class="fas fa-lock"></i>
                                        </span>
                                        <span class="name">{{ lang['signup.password'] }}
                                        </span>
                                    </label>
                                    <input type="password" class="form-control" id="password" name="password">
                                </div>

                                <div class="form-group mb-3">
                                    <label for="confirm" class="control-label mb-1">
                                        <span class="icon">
                                            <i class="fas fa-lock"></i>
                                        </span>
                                        <span class="name">{{ lang['signup.confirm.password'] }}</span>
                                    </label>
                                    <input type="password" class="form-control" id="confirm" name="password_again">
                                </div>


                                <div class="checkbox">
                                    <label>
                                        <input type="checkbox" name="terms" value="1">
                                        {{ lang['signup.accept_terms_text'] }}
                                    </label>
                                </div>


                                {% if captcha %}
                                <div class="form-group">
                                    <div class="g-recaptcha" data-sitekey="{{ captchaKey }}"></div>
                                </div>
                                {% endif %}

                                <input type="hidden" name="crsf_token" value="{{ csrf_token() }}">
                                <button type="submit" class="btn btn-primary d-block w-100">{{ lang['signup.button'] }}</button>
                            </form>
                            <p class="text-center">
                                Already have an account? <a href="/">Sign in</a>
                            </p>


                        </div>
                    </div>
                </div>
                <div class="col-md-3"></div>
            </div>
        </div>
    </section>
</main>



{% include 'footer.twig' %}